
<div class="task-list">
    <h2>Tasks</h2>
    <ul>
        @foreach (var task in TaskItems)
        {
            <li @onclick="() => OnTaskItemSelected.InvokeAsync(task)">
                @task.Description
            </li>
        }
    </ul>
</div>

@code {
    [Parameter]
    public List<TaskItem> TaskItems { get; set; }

    [Parameter]
    public EventCallback<TaskItem> OnTaskItemSelected { get; set; }
}
